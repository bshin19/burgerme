<!-- Setup the index.handlebars to
have the template that Handlebars can render onto.-->
<h1>Very Veggie Burgers Are On the Menu!</h1>

<h2>Ready For Devouring</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{this.id}}. {{this.burger_name}}
      <br>
      <button data-id="{{this.id}}">Devour!</button>
      <br>
    {{/unless}}
  {{/each}}
</ul>

<h2>These burgers are history</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{this.id}}. {{this.burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burgaaah!</button>
</form>
