<!-- Setup the index.handlebars to
have the template that Handlebars can render onto.-->
<div class="container">
  <div class="row">
    <div class="col-10 mx-auto mainbod">
      <h1>
        Very Veggie Burgers Are On the Menu!
      </h1>

      <div class="row">
        <div class="col-6 darkbox">
          <h2>
            Ready For Devouring
          </h2>

          <ul>
            {{#each burgers}} {{#unless devoured}} {{this.id}}. {{this.burger_name}}
            <br>
            <button data-id="{{this.id}}" class="devour btn-danger btn">Devour!</button>
            <br> {{/unless}} {{/each}}
          </ul>

        </div>

        <div class="col-6 darkbox">
          <h2>These burgers are history</h2>

          <ul>
            {{#each burgers}} {{#if devoured}} {{this.id}}. {{this.burger_name}}
            <br> {{/if}} {{/each}}
          </ul>

        </div>
      </div>

      <div class="row">
        <div class="col-4">
          <img class="img-responsive img-thumbnail" src="assets/img/burger.jpg">
        </div>

        <div class="col-4">
          <h2>Add a Burger</h2>
          <form class="create-form">

            <div class="form-group">
              <label for="ca">Burger Name:</label>
              <input type="text" id="brgrName" name="name">
            </div>

            <button type="submit" class="btn btn-primary" id="subBtn">Add Burgaaah!</button>
          </form>
        </div>
        <div class="col-4">
          <img class="img-responsive img-thumbnail" src="assets/img/burger2.jpg">
        </div>
      </div>
      <br>
    </div>
  </div>
</div>